<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="0dp"
                  android:id="@+id/ll_header"
                  android:orientation="horizontal"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_height="56dp">

        <TextView android:gravity="center" android:text="سعر البيع" android:layout_weight="1" android:id="@+id/tv_price"
                  android:layout_width="0dp" android:layout_height="match_parent"/>
        <TextView android:gravity="center" android:text="الكمية" android:layout_weight="1" android:id="@+id/quantity"
                  android:layout_width="0dp" android:layout_height="match_parent"/>
        <TextView android:gravity="center" android:layout_weight="1" android:id="@+id/tv_name"
                  android:text="الاسم"
                  android:layout_width="0dp" android:layout_height="match_parent"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            app:layout_constraintTop_toBottomOf="@id/ll_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</android.support.constraint.ConstraintLayout>