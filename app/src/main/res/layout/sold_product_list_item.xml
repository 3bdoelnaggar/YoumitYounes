<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="horizontal" android:layout_height="56dp">

    <TextView android:gravity="center" android:layout_weight="1" android:id="@+id/tv_price"
              android:layout_width="0dp" android:layout_height="match_parent"/>

    <TextView android:gravity="center" android:layout_weight="1" android:id="@+id/tv_quantity"
              android:layout_width="0dp" android:layout_height="match_parent"/>
    <TextView android:gravity="center" android:layout_weight="1" android:id="@+id/tv_name"
              android:layout_width="0dp" android:layout_height="match_parent"/>


</LinearLayout>